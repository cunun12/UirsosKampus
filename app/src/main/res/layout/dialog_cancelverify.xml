<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apakah anda yakin ?" />

    <RadioGroup
        android:id="@+id/rgCancelVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Verifikasi Gagal" />

        <RadioButton
            android:id="@+id/rbNpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NPM tidak sama dengan yang ada di KTM" />

        <RadioButton
            android:id="@+id/rbNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama tidak sama dengan yang ada di KTM" />

        <RadioButton
            android:id="@+id/rbProdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prodi tidak sama dengan yang ada di KTM" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_proses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes" />

</LinearLayout>